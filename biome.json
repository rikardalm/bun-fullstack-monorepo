{
  "$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "css": { "linter": { "enabled": false } },

  "overrides": [
    { "includes": ["**/*.vue"], "formatter": { "enabled": false }, "linter": { "enabled": false } }
  ]
}
