{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "css": {
    "linter": { "enabled": false },
    "parser": { "tailwindDirectives": true }
  },

  "overrides": [
    { "includes": ["**/*.vue"], "formatter": { "enabled": false }, "linter": { "enabled": false } }
  ]
}
