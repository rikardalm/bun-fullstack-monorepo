{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && simple-git-hooks",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:vue": "prettier --write \"**/*.vue\"",
    "lint:vue": "prettier --check \"**/*.vue\"",
    "precommit": "bun run lint:fix && bun run typecheck"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run precommit"
  },
  "packageManager": "bun@1.2.3",
  "dependencies": {
    "@vueuse/core": "^14.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.563.0",
    "nuxt": "^4.3.0",
    "reka-ui": "^2.8.0",
    "tailwind-merge": "^3.4.0",
    "vue": "^3.5.27",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@nuxtjs/sitemap": "^7.6.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "nuxt-schema-org": "^5.0.10",
    "nuxt-security": "^2.5.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "shadcn-nuxt": "^2.4.3",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.4"
  }
}
